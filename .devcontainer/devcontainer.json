{
  "name": "GithubActionsDebugger",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "capAdd": ["SYS_ADMIN"],
  "securityOpt": ["apparmor:unconfined"],
  "runArgs": ["--device=/dev/fuse"],
  "postStartCommand": "nohup sh -c '/usr/sbin/sshd -D &' > /dev/null",
  "customizations": {
    "vscode": {
      "settings": {
        "extensions.ignoreRecommendations": true,
        "files.exclude": {
          "**": true,
          "!./runner": false
        }
      }
    }
  }
}
