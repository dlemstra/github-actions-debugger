{
  "name": "GithubActionsDebugger",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "../"
  },
  "capAdd": ["SYS_ADMIN"],
  "securityOpt": ["apparmor:unconfined"],
  "runArgs": ["--device=/dev/fuse"],
  "postStartCommand": "service ssh start",
  "forwardPorts": ["4748:22"],
  "customizations": {
    "vscode": {
      "settings": {
        "extensions.ignoreRecommendations": true
      }
    }
  }
}
