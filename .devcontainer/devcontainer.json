{
  "name": "GithubActionsDebugger",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "capAdd": ["SYS_ADMIN"],
  "securityOpt": ["apparmor:unconfined"],
  "runArgs": ["--device=/dev/fuse"],
  "postStartCommand": "mv /gitignore $CODESPACE_VSCODE_FOLDER/.gitignore && nohup sh -c '/usr/sbin/sshd -D &' > /dev/null",
  "customizations": {
    "vscode": {
      "settings": {
        "extensions.allowInsiders": true,
        "extensions.ignoreRecommendations": true,
        "explorer.excludeGitIgnore": true
      },
      "extensions": [
        "GitHub.copilot-chat",
        "GitHub.copilot-nightly"
      ]
    }
  }
}
